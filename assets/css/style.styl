@import "vendor/normalize.css"
@import "vendor/boilerplate.css"
@import "iphone"

link-color = #00E

body
  background #eee
  font-family Chivo, sans-serif
  height 100%

a, a:link
  color link-color
  text-decoration none
  border-bottom 3px solid link-color

#list
  font-size 36px
  position fixed
  top 0
  bottom 0
  z-index 1
  list-style-type none
  margin 0
  padding 20px 0
  -webkit-transition all 0.2s ease-in-out
  transition all 0.4s ease-in-out

  a, a:link
    padding 0
    margin 0 20px
    display inline
    position relative
    color link-color
    text-decoration none
    border-bottom 3px solid link-color

  .transparent
    opacity 0

@media only screen and (min-device-width : 768px) and (max-device-width : 1024px)
  #list
    font-size 24px
    a
      border-bottom-width 2px !important

#list a:visited
  color #eee
  text-decoration line-through
  border-bottom none

.js #list a
  opacity 0

#content
  position absolute
  box-sizing border-box
  top 0
  left 100px
  right 0
  z-index 10
  box-shadow 0 0 20px rgba(0,0,0,0.8)
  -webkit-transition left 0.2s ease-in-out
  transition left 0.4s ease-in-out
  min-height 100%

  h1, h2, h3
    font-weight normal

  a:hover
    color #fff
    background link-color

  img
    display block
    margin 20px 0
  p
    width 600px
    padding 0 40px
    font-size 28px
    margin 60px 0

  .keywords
    h4
      text-transform uppercase
      font-size 16px
      padding 0 40px
      margin 0
    p
      margin 0 0 40px
      font-size 24px

#about #content
  padding 40px
  color #ccc
  background #000
  .text
    position relative
    z-index 2
  #mouses
    position absolute
    z-index 1
    top 0
    left 0
    right 0
    bottom 0

