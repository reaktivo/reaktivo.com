@import "vendor/normalize.css"
@import "vendor/boilerplate.css"
@import "mixins"
@import "iphone"

link-color = #00E

html
  width 100%
  height 100%

body
  background #eee
  font-family Chivo, sans-serif
  width 100%
  height 100%
  overflow-x hidden
  position relative

a, a:link
  color link-color
  text-decoration none
  border-bottom 3px solid link-color

#list
  font-size 28px
  position fixed
  top 0
  bottom 0
  z-index 1
  list-style-type none
  margin 0
  padding 20px 0
  transition background 0.8s ease-in-out
  -webkit-transition @transition
  -moz-transition @transition

  li
    margin-bottom 10px

  a, a:link
    padding 3px
    margin 0 20px
    display inline
    position relative
    color link-color
    text-decoration none
    border-bottom 0.12em solid
    transition all 0.8s ease-in-out
    -webkit-transition @transition
    -moz-transition @transition

  .transparent
    opacity 0

#list a:visited
  color #eee
  text-decoration line-through
  border-bottom none

.js #list a
  opacity 0

#wrapper
  position relative
  width 100%
  height 100%
  overflow hidden

#content
  position absolute
  box-sizing border-box
  top 0
  left 0
  right 0
  z-index 10
  font-size 28px
  box-shadow 0 0 20px rgba(0,0,0,0.8)
  min-height 100%
  width 768px
  min-width 100%
  padding-top 60px
  padding-bottom 40px

  header
    margin 20px 40px
    position fixed
    top 0
    z-index 3000
    @media only screen and (max-width: 320px)
      margin-left 20px

  .center
    margin 0 auto
    width 768px

  .index
    padding 3px
    margin -3px
    position relative
    z-index 2
    a
      transition all 0.8s ease-in-out
      -webkit-transition @transition
      -moz-transition @transition


  h1, h2, h3, h4, p, ul
    max-width 768px

  a:hover
    color #fff
    background link-color

  h1, h2, h3, h4, p
    box-sizing border-box
    font-weight normal
    width 100%
    padding 20px 40px
    margin 0 auto

  .legend
    p
      text-align center
      font-size 16px
      text-tranform uppercase

media-image()
  text-align center
  margin 20px 0
  img
    display block
    width 100%
    max-width 100%
    margin-top 20px
    margin-bottom 20px

.image-full
  media-image()
  @media screen and (min-width: 1024px)
    img.browser-chrome
      display inline
      margin 20px
      max-width 45%
      padding 1.8% 2px 2px
      border-radius 5px
      border-bottom-left-radius 0
      border-bottom-right-radius 0
      background #000

  @media screen and (max-width: 1023px)
    margin 40px 0
    img.browser-chrome
      border 5px solid #000
      border-left none
      border-right none
      margin -5px 0 0

.image-full
  media-image()

.image-768
  media-image()
  img
    width 768px

.image-320
  media-image()
  img
    display inline
    margin 20px
  @media screen and (max-width: 320px)
    img.iphone-chrome
      margin 20px 0
  @media screen and (min-width: 321px)
    img.iphone-chrome
      width 320px
      padding 60px 8px
      border-radius 30px
      background #000

.image-simple
  text-align center
  img
    display inline
    border 2px solid #037883
    margin 20px
    max-width 100%
    @media only screen and (max-width: 320px)
      border none
      margin 20px 0


.video-full
  position relative
  height 0
  margin 20px 0
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%


@media only screen and (max-width: 320px)

  #list
    font-size 24px
    min-width 100%

  #content
    width 100%
    font-size 14px
    a
      border-width 2px
    p
      padding 1em 1em

    iframe
      width 320px
      height 144px

