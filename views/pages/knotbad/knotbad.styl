#knotbad
  .pace .pace-progress
    background #840003
  #list
    background #111
    a { color: #666 }
    .knotbad a
      color #eeeeee

  #content
    color #eee
    background #222
    a.index
      hoverlink #eee #222
    .app
      padding 40px
      overflow hidden
    .description
      float left
      margin-top 60px
      position relative
      p
        font-size 16px
        padding 0
        margin 20px 0
        width 200px
        a
          color #fff
          background link-color
          padding 5px 10px

    @media only screen and (max-width: 320px)

      .app
        padding-bottom 0

      .iphone
        float none

      .description
        float none
        margin 20px 0 0
        text-align center
        p
          width 100%
          padding 20px
          margin 0

  .iphone
    position relative
    float left
    margin-right 20px
    z-index 2

