!!!
include credits.txt
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    != css('style')
    script(src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js")
    include opengraph
    include analytics
    include fonts
    block head
  body(id=page)
    header
      nav
        ul#list
          each title, page in pages
            li: a(href="/#{page}")= title

    #content
      block content

    != js('all')
    block scripts